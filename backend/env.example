# EventSync Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3003

# Database Configuration
DB_PATH=./data/eventsync.db
DB_MIGRATIONS_PATH=./src/config/migrations

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Security
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI/ML Configuration (for future use)
AI_MODEL_ENDPOINT=https://api.openai.com/v1
AI_MODEL_API_KEY=your-openai-api-key

# Instagram API (for future use)
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# External Services
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret

# Monitoring
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Development
DEBUG=eventsync:*
NODEMON_IGNORE=node_modules,dist,*.db 